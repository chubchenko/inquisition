  function init_chart_doughnut(){
    if( typeof (Chart) === 'undefined'){ return; }
    if ($('##{params[:presenter].errors_count_chart[:element_id]}').length){
      var chart_doughnut_settings = {
        type: 'doughnut',
        tooltipFillColor: "rgba(51, 51, 51, 0.55)",
        data: {
          labels: #{params[:presenter].errors_count_chart[:body].map{|error| error[:name]}},
          datasets: [
            {
              data: #{params[:presenter].errors_count_chart[:body].map{|error| error[:total]}},
              backgroundColor: [
                "#3498DB",
                "#BDC3C7",
                "#9B59B6",
                "#E74C3C",
                "#26B99A"
              ],
              hoverBackgroundColor: [
                "#49A9EA",
                "#CFD4D8",
                "#B370CF",
                "#E95E4F",
                "#36CAAB"
              ]
            }
          ]
        },
        options: {
          legend: false,
          responsive: false,
        }
      }
      var chart_element = $('##{params[:presenter].errors_count_chart[:element_id]}');
      var chart_doughnut = new Chart( chart_element, chart_doughnut_settings);
    }

    if ($('##{params[:presenter].route_methods_chart[:element_id]}').length){
      var chart_doughnut_settings = {
        type: 'doughnut',
        tooltipFillColor: "rgba(51, 51, 51, 0.55)",
        data: {
          labels: #{params[:presenter].route_methods_chart[:body].map{|method| method[:name]}},
          datasets: [
            {
              data: #{params[:presenter].route_methods_chart[:body].map{|method| method[:total]}},
              backgroundColor: [
                "#3498DB",
                "#BDC3C7",
                "#9B59B6",
                "#E74C3C",
                "#26B99A"
              ],
              hoverBackgroundColor: [
                "#49A9EA",
                "#CFD4D8",
                "#B370CF",
                "#E95E4F",
                "#36CAAB"
              ]
            }
          ]
        },
        options: {
          legend: false,
          responsive: false,
        }
      }
      var chart_element = $('##{params[:presenter].route_methods_chart[:element_id]}');
      var chart_doughnut = new Chart( chart_element, chart_doughnut_settings);
    }
  }
