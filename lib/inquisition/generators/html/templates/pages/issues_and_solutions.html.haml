.col-md-3.left_col
  .left_col.scroll-view
    .navbar.nav_title{:style => "border: 0;"}
      %a.site_title{:href => "index.html"}
        %i.fa.fa-paw
        %span Code Auditor!
    .clearfix
    .profile.clearfix
      .profile_pic
        %img.img-circle.profile_img{:alt => "...", :src => "images/img.jpg"}/
    %br/
    .main_menu
      %nav#sidebar
        .sidebar-header
          %h3 Reports
        = partial 'html/menu.html.haml', items: menu_items
.top_nav
  .nav_menu
    %nav
      %ul.nav.navbar-nav.navbar-right
        %li
          %a.user-profile{:class => "aria-expanded=", :false => "", :href => "javascript:;"}
            %i.fa.fa-envelope-o
            = succeed "code_auditor@rubygarage.org" do
              %img{:alt => "", :src => "images/img.jpg"}/
.right_col{:role => "main"}
  .row
    %h2{ style: "text-align: center;" } Hottest issues
  %br/
  .row
    .col-md-12.col-sm-12.col-xs-12
      .x_panel.tile
        .x_title
          %h2
            Issues and solutions summary
            %small
              has
              = total_issues
              solutions
          %ul.nav.navbar-right
            %li
              %a.collapse-link
                %i.fa.fa-chevron-up
          .clearfix
        .x_content
          %table.countries_list
            %tbody
              %th Issue Type
              %th Message
              %th Auditor
              - issues.each do |issue|
                %tr
                  %td
                    %a{ href: issue[:link] }= issue[:title]
                  %td= issue[:message]
                  %td
                    %a{ href: issue[:auditor_link] }= issue[:auditor_name]
